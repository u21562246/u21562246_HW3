@using u21562246_HW3.Models
@model  List<FileModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach (var VideoInModel in Model)
{
    <div class="row">
        <div class="col-lg-4">
            <video height="300"controls="controls" autoplay>
                <source src="~/Media/Videos/@VideoInModel.FileName" type="video/mp4">
            </video>
            <p>@VideoInModel.FileName</p>
            <button type="button" class="btn btn-success">@Html.ActionLink("Download", "Download", new { FileName = VideoInModel.FileName })</button>
            <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { FileName = VideoInModel.FileName })</button>
        </div>
    </div>
}
