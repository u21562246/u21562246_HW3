@using u21562246_HW3.Models
@model  List<ModelForFile>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@foreach(var ImageInModel in Model)
 {
    <div class="row">
        <div class="col-lg-4">
            <img src="~/Media/Images/@ImageInModel.NameOfSelectedFile" style="height:350px" />
            <p>@ImageInModel.NameOfSelectedFile</p>
            <button type="button" class="btn btn-success">@Html.ActionLink("Download", "Download", new { FileName = ImageInModel.NameOfSelectedFile })</button>
            <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { FileName = ImageInModel.NameOfSelectedFile })</button>
        </div>
    </div>
 }